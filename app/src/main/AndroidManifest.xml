<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kwave.android.firebaseprojectexercise">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <activity
        android:name=".LoginActivity"
        android:label="@string/app_name" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SelectActivity"
            android:label="@string/title_activity_select"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Information.InformationActivity"
            android:label="@string/title_activity_information"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Information.InfomationWriteActivity"
            android:label="@string/title_activity_infomation"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Payment.PaymentWriteActivity"
            android:label="@string/title_activity_payment"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Payment.PaymentReadActivity"
            android:label="@string/title_activity_payment_read"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Notify.NotifyWriteActivity"
            android:label="@string/title_activity_notify_write"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Notify.NotifyReadActivity"
            android:label="@string/title_activity_notify_read"
            android:theme="@style/AppTheme.NoActionBar"/>
            <activity
                android:name=".Group.GroupReadActivity"
                android:label="@string/title_activity_group_read"
                android:theme="@style/AppTheme.NoActionBar" />
            <activity
                android:name=".Group.GroupWriteActivity"
                android:label="@string/title_activity_group_write"
                android:theme="@style/AppTheme.NoActionBar" >
        </activity>
    </application>

</manifest>