<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kwave.android.firebaseprojectexercise.Payment.PaymentReadFragment_water">


    <LinearLayout
        android:id="@+id/payReadlinearLayoutWater"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payTab">

        <TextView
            android:id="@+id/payReadRoomWater"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:letterSpacing="0.02"
            android:textColor="@color/darkish_pink_two"
            android:textSize="13sp"
            android:text="호실" />

        <TextView
            android:id="@+id/payReadNameWater"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:letterSpacing="0.02"
            android:textColor="@color/darkish_pink_two"
            android:textSize="13sp"
            android:text="이름" />

        <TextView
            android:id="@+id/payReadCountWater"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:letterSpacing="0.02"
            android:textColor="@color/darkish_pink_two"
            android:textSize="13sp"
            android:text="금액" />

        <TextView
            android:id="@+id/payReadUseWater"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:letterSpacing="0.02"
            android:textColor="@color/darkish_pink_two"
            android:textSize="13sp"
            android:text="사용량" />

        <TextView
            android:id="@+id/payReadDayWater"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:letterSpacing="0.02"
            android:textColor="@color/darkish_pink_two"
            android:textSize="13sp"
            android:text="납부일" />

        <TextView
            android:id="@+id/payReadCheckWater"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:letterSpacing="0.02"
            android:textColor="@color/darkish_pink_two"
            android:textSize="13sp"
            android:text="확인" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/payReadWaterRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
