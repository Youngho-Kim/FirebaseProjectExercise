<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kwave.android.firebaseprojectexercise.PaymentFragment_month">


    <LinearLayout
        android:gravity="center"
        android:id="@+id/linearLayoutMonth"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payTab">

        <TextView
            android:id="@+id/textPayRoomMonth"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:letterSpacing="0.02"
            android:textColor="@color/darkish_pink_two"
            android:textSize="13sp"
            android:text="호실" />

        <TextView
            android:id="@+id/textPayNameMonth"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:letterSpacing="0.02"
            android:textColor="@color/darkish_pink_two"
            android:textSize="13sp"
            android:text="이름" />

        <TextView
            android:id="@+id/textPayCountMonth"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:letterSpacing="0.02"
            android:textColor="@color/darkish_pink_two"
            android:textSize="13sp"
            android:text="금액(/달)" />


        <TextView
            android:id="@+id/textPayDayMonth"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:letterSpacing="0.02"
            android:textColor="@color/darkish_pink_two"
            android:textSize="13sp"
            android:text="납부일" />

        <TextView
            android:id="@+id/textPayCheckMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:letterSpacing="0.02"
            android:textColor="@color/darkish_pink_two"
            android:textSize="13sp"
            android:layout_weight="1"
            android:text="확인" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/payMonthRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>
