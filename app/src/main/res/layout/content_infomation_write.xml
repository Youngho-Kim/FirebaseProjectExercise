<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kwave.android.firebaseprojectexercise.Information.InfomationWriteActivity"
    tools:showIn="@layout/activity_infomation_write">


    <ImageView
        android:id="@+id/infoImage"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintHorizontal_bias="0.0" />

    <LinearLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"

        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/infoImage">

        <LinearLayout
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center"
                android:text="주 소"
                android:paddingLeft="30dp"
                android:textSize="15sp"
                android:textColor="#000000"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="2.7sp"/>

            <EditText
                android:id="@+id/editAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Address"
                android:textSize="13sp"
                android:textColor="#000000"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="2.7sp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/line" />

        <LinearLayout
            android:id="@+id/master"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="12"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtMaster"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center"
                android:paddingLeft="30dp"
                android:text="집주인 정보"
                android:textSize="15sp"
                android:textColor="#000000"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="2.7sp" />

            <LinearLayout
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="이 름"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="2.7sp" />

                <EditText
                    android:id="@+id/editName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Name"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="2.7sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtPhone"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="핸드폰번호"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="2.7sp" />

                <EditText
                    android:id="@+id/editPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="010 - 0000 - 0000"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="2.7sp"  />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtAccount"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="계좌 번호"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="2.7sp" />

                <EditText
                    android:id="@+id/editAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Account"
                    android:textSize="13sp"
                    android:textColor="#000000"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="2.7sp" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/line" />

        <LinearLayout
            android:id="@+id/alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="12"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTrash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="분리수거"
                android:paddingLeft="30dp"
                android:textSize="15sp"
                android:textColor="#000000"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="2.7sp" />

            <EditText
                android:id="@+id/editTrash"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:hint="지정된 날짜와 장소에 규격봉투를 사용하여 버리며 (복도나 계단에 방치 불가), 분리수거 대상 쓰레기 (병류, 캔류, 플라스틱류 등)는 지정된 수거함에 정확히 구분하여 투기한다. 현재는 일, 화, 목 오후 6시~9시에 버림."
                android:textSize="13sp"
                android:textColor="#000000"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="2.7sp" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
