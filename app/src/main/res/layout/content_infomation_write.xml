<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kwave.android.firebaseprojectexercise.Information.InformationWriteActivity"
    tools:showIn="@layout/activity_infomation_write">
    <TextView
        android:id="@+id/infoTextImageWrite"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/infoImageWrite"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintHorizontal_bias="0.0" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:orientation="vertical"
        android:paddingLeft="11.3dp"
        android:paddingRight="11.3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/infoImageWrite"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/addressWrite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtAddressWrite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="2.7sp"
                android:paddingLeft="30dp"
                android:text="주 소"
                android:textColor="#000000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/editAddressWrite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:ems="10"
                android:gravity="left|center"
                android:hint="Address"
                android:inputType="textPersonName"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="2.7sp"
                android:textColor="#000000"
                android:textSize="13sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="25dp"
            android:paddingRight="30dp"
            app:srcCompat="@drawable/line" />

        <LinearLayout
            android:id="@+id/masterWrite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="12"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtMasterWrite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="2.7sp"
                android:paddingLeft="30dp"
                android:text="집주인 정보"
                android:textColor="#000000"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/nameWrite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtNameWrite"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="2.7sp"
                    android:paddingLeft="30dp"
                    android:text="이 름"
                    android:textColor="#000000"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/editNameWrite"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Name"
                    android:inputType="textPersonName"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="2.7sp"
                    android:layout_marginRight="30dp"
                    android:textColor="#000000"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/PhoneWrite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtPhoneWrite"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="2.7sp"
                    android:paddingLeft="30dp"
                    android:text="핸드폰번호"
                    android:textColor="#000000"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/editPhoneWrite"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="010 - 0000 - 0000"
                    android:inputType="textPersonName"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="2.7sp"
                    android:layout_marginRight="30dp"
                    android:textColor="#000000"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/accountWrite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtAccountWrite"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="2.7sp"
                    android:paddingLeft="30dp"
                    android:text="계좌 번호"
                    android:textColor="#000000"
                    android:textSize="13sp" />

                <EditText
                    android:id="@+id/editAccountWrite"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Account"
                    android:inputType="textPersonName"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="2.7sp"
                    android:layout_marginRight="30dp"
                    android:textColor="#000000"
                    android:textSize="13sp" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="25dp"
            android:paddingRight="30dp"
            app:srcCompat="@drawable/line" />

        <LinearLayout
            android:id="@+id/alarmWrite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="12"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTrashWrite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="2.7sp"
                android:paddingLeft="30dp"
                android:text="분리수거"
                android:textColor="#000000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/editTrashWrite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:gravity="left|center"
                android:hint="분리수거 안내입니다."
                android:letterSpacing="0.03"
                android:lineSpacingExtra="2.7sp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:textColor="#000000"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
