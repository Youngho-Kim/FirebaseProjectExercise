<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kwave.android.firebaseprojectexercise.PaymentActivity"
    tools:showIn="@layout/activity_payment"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">
        <LinearLayout
            android:paddingLeft="100dp"
            android:paddingRight="100dp"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:id="@+id/linearLayout2"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout">

            <ImageButton
                android:id="@+id/preMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/cardview_light_background"
                android:rotation="270"
                app:srcCompat="@android:drawable/arrow_up_float" />
            <TextView
                android:id="@+id/textPayMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textColor="#000000"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="3sp"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:text="5월"
                />

            <ImageButton
                android:id="@+id/nextMonth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/cardview_light_background"
                android:rotation="270"
                app:srcCompat="@android:drawable/arrow_down_float" />
        </LinearLayout>

        <android.support.design.widget.TabLayout

        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/payTab"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <android.support.design.widget.TabItem
            android:id="@+id/tabMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#000000"
            android:letterSpacing="0.1"
            android:text="월세"
            />

        <android.support.design.widget.TabItem
            android:id="@+id/tabWater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#000000"
            android:letterSpacing="0.1"
            android:text="수도세" />

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#000000"
            android:letterSpacing="0.1"
            android:text="+  추가" />
        </android.support.design.widget.TabLayout>



    <android.support.v4.view.ViewPager
        android:id="@+id/payViewPaser"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="9"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/payTab"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp">
        <!--<include layout="@layout/fragment_payment_month"/>-->
    </android.support.v4.view.ViewPager>



</android.support.constraint.ConstraintLayout>