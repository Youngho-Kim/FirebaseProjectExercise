<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kwave.android.firebaseprojectexercise.Group.GroupWriteFragment_contact">


    <LinearLayout
        android:id="@+id/groupWriteLinearLayoutContact"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/groupTab">

        <TextView
            android:id="@+id/textGroupWriteRoomContact"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:letterSpacing="0.02"
            android:text="호실"
            android:textColor="@color/darkish_pink_two"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textGroupWriteNameContact"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:letterSpacing="0.02"
            android:text="이름"
            android:textColor="@color/darkish_pink_two"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textGroupPhoneContact"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:letterSpacing="0.02"
            android:text="핸드폰 번호"
            android:textColor="@color/darkish_pink_two"
            android:textSize="13sp" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/groupWriteContactRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>
